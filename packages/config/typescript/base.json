{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "Bundler",
        "noUncheckedIndexedAccess": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "baseUrl": "../../../",
        "paths": {
            "@web/*": ["apps/web/src/*"],
            "@web/app/*": ["apps/web/src/app/*"],
            "@web/components": ["apps/web/src/layouts/index.tsx"],
            "@web/components/*": ["apps/web/src/layouts/*"],
            "@web/stores": ["apps/web/src/stores/index.ts"],
            "@web/stores/*": ["apps/web/src/stores/*"],
            "@web/libs": ["apps/web/src/libs/index.ts"],
            "@web/libs/*": ["apps/web/src/libs/*"],
            "@web/public/*": ["apps/web/public/*"],
            "@ui": ["packages/ui/src/index.tsx"],
            "@ui/*": ["packages/ui/src/*"],
            "@ui/tailwind.config.js": ["packages/ui/tailwind.config.js"],
            "@ui/components": ["packages/ui/src/components/index.tsx"],
            "@ui/components/*": ["packages/ui/src/components/*"],
            "@ui/layouts": ["packages/ui/src/layouts/index.tsx"],
            "@ui/layouts/*": ["packages/ui/src/layouts/*"],
            "@ui/ui": ["packages/ui/src/ui/index.tsx"],
            "@ui/ui/*": ["packages/ui/src/ui/*"],
            "@server": ["apps/server/src/index.ts"],
            "@server/*": ["apps/server/src/*"],
            "@libs": ["packages/libs/src/index.ts"],
            "@libs/*": ["packages/libs/src/*"]
        }
    }
}
